<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <msp_securitysuite>
            <shield>
                <enabled>0</enabled>
                <enabled_backend>0</enabled_backend>
                <min_impact_log>3</min_impact_log>
                <min_impact_stop>6</min_impact_stop>
                <cookie_whitelist>mage-cache-storage
mage-cache-storage-section-invalidation</cookie_whitelist>
                <uri_whitelist>/$admin/cms/page/save
/$admin/cms/block/save
/$admin/widget_instance/validate
/$admin/widget_instance/save
/$admin/catalog/product/save
/$admin/catalog/category/save</uri_whitelist>
            </shield>
        </msp_securitysuite>
    </default>
</config>